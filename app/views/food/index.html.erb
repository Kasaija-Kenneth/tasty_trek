<div class='mt-5'>
  <h1>Food page</h1>
</div>
<%render partial: "partials/alert"%>
<div class="d-flex md-1 justify-content-end"><%= link_to "Add food", new_food_path, class: "btn btn-outline-primary"%></div><br />
<% if @foods.size.positive? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Measurement Unit (E.g Kg)</th>
        <th scope="col">Unit Price (E.g, USD)</th>
        <th scope="col">Quantity (available Qtty)</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <%currency = "USD"%>
        <tr>
          <td><%=food.name%></td>
          <td><%=food.measurement_unit%></td>
          <td><%=food.price%></td>
          <td><%=food.quantity%><%=  food.measurement_unit%></td>
          <td>
            <% if can? :destroy, food %>
              <%= button_to food_path(food), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" do %>
                Delete
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No food available</p>
<% end %>
